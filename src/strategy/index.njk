<!-- Hero Section -->
<section class="relative overflow-hidden py-16">
  <div class="absolute inset-0 bg-gradient-to-br from-bg-primary via-bg-secondary to-bg-tertiary"></div>
  <div class="absolute top-10 left-20 w-80 h-80 bg-neon-gold/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-10 right-20 w-64 h-64 bg-neon-purple/15 rounded-full blur-3xl"></div>

