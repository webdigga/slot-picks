<!-- Strategy Articles Grid -->
<section class="py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for article in collections.strategy %}
      <a href="{{ article.url }}" class="group block bg-card-bg/60 backdrop-blur-sm rounded-2xl border border-border-subtle overflow-hidden hover:border-neon-gold/50 transition-all duration-300 hover:shadow-neon-gold/10 hover:shadow-lg">
        <div class="p-6">
          {% if article.data.category %}
          <span class="inline-flex items-center px-3 py-1 bg-neon-purple/20 border border-neon-purple/40 text-neon-purple text-xs font-medium rounded-full mb-4">
            {{ article.data.category }}
          </span>
          {% endif %}

          <h2 class="text-xl font-bold text-white group-hover:text-neon-gold transition-colors mb-3">
            {{ article.data.title }}
          </h2>

          <p class="text-text-secondary text-sm line-clamp-3 mb-4">
            {{ article.data.description }}
          </p>

          <div class="flex items-center gap-4 text-sm text-text-muted">
            {% if article.data.readTime %}
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              {{ article.data.readTime }} min
            </span>
            {% endif %}
            {% if article.data.difficulty %}
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              {{ article.data.difficulty }}
            </span>
            {% endif %}
          </div>
        </div>
      </a>
      {% endfor %}
    </div>

  </div>
</section>

<!-- Essential Reading Section -->
