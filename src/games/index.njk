    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for game in collections.games %}
      <a href="{{ game.url }}" class="group block bg-card-bg/60 backdrop-blur-sm rounded-2xl border border-border-subtle overflow-hidden hover:border-neon-green/50 transition-all duration-300 hover:shadow-neon-green/10 hover:shadow-lg">
        <div class="p-6">
          <div class="flex items-center gap-3 mb-4">
            {% if game.data.provider %}
            <span class="px-3 py-1 bg-neon-purple/20 border border-neon-purple/40 text-neon-purple text-xs font-medium rounded-full">
              {{ game.data.provider }}
            </span>
            {% endif %}
            {% if game.data.volatility %}
            <span class="px-3 py-1 bg-neon-blue/20 border border-neon-blue/40 text-neon-blue text-xs font-medium rounded-full">
              {{ game.data.volatility }}
            </span>
            {% endif %}
          </div>

          <h2 class="text-xl font-bold text-white group-hover:text-neon-green transition-colors mb-3">
            {{ game.data.title }}
          </h2>

          <p class="text-text-secondary text-sm line-clamp-2 mb-4">
            {{ game.data.description }}
          </p>

          <div class="flex items-center justify-between text-sm">
            {% if game.data.rtp %}
            <div>
              <span class="text-text-muted">RTP:</span>
              <span class="text-neon-green font-semibold ml-1">{{ game.data.rtp }}</span>
            </div>
            {% endif %}
            {% if game.data.maxWin %}
            <div>
              <span class="text-text-muted">Max Win:</span>
              <span class="text-neon-gold font-semibold ml-1">{{ game.data.maxWin }}</span>
            </div>
            {% endif %}
          </div>
        </div>
      </a>
      {% endfor %}
    </div>

  </div>
</section>

